<Window 
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
       Title="FramingSteelHouse" Height="352.592" Width="317.16">
    <StackPanel Margin="0,0,2,-1">
        <Grid Margin="0 20 0 0 ">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBox x:Name="Slope" HorizontalAlignment ="Center" TextAlignment="Center" VerticalAlignment="Center"  Margin="0,0,0,0" Grid.Column="0" Grid.Row ="0"  Text="Slope"/>
            <ComboBox x:Name="Column_Left" HorizontalAlignment="Center" ItemsSource="{Binding}" Grid.Row="1"  DisplayMemberPath="Name" SelectedValuePath="Name" SelectedValue="{Binding Name}" IsEditable="True" VerticalAlignment="Center" Margin="10,10,10,0" Grid.Column="0" Text="Colum Left" Width="82" Height="28" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Button x:Name="ok_Click" Click="ok_Click" Content="OK" HorizontalContentAlignment="Center" Grid.Row="1" Grid.Column="1"  VerticalContentAlignment="Center" Margin="0,10,70,0"/>
            <ComboBox x:Name="Column_Type"  HorizontalAlignment="Center" Grid.Row="1" ItemsSource="{Binding}" DisplayMemberPath="Name" SelectedValuePath="Name" SelectedValue="{Binding Name}" IsEditable="True" VerticalAlignment="Center" Margin="37,10,71,0" Grid.Column="1" Text="Colum Left" Width="87" Height="28" Grid.ColumnSpan="2" VerticalContentAlignment="Center"/>
            <ComboBox x:Name="Base_Level" HorizontalAlignment="Center" VerticalAlignment="Center"  ItemsSource="{Binding}" DisplayMemberPath="Name" SelectedValuePath="Name" SelectedValue="{Binding Name}" IsEditable="True"  Margin="0,10,0,0" Grid.Row="0" Grid.Column="2"  Text="Base Level" Width="63"/>
            <ComboBox x:Name="Top_Level" HorizontalAlignment="Center" VerticalAlignment ="Center"  ItemsSource="{Binding}" DisplayMemberPath="Name" SelectedValuePath="Name" SelectedValue="{Binding Name}" IsEditable="True"  Margin="20,10,20,0" Grid.Row="2" Grid.Column="2" Text="Top Level" Width="63"/>
        </Grid>
        <Grid Margin="0 40 0 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <ComboBox x:Name="Gird_Ver" HorizontalAlignment="Center"  ItemsSource="{Binding}" DisplayMemberPath="Name" SelectedValuePath="Name" SelectedValue="{Binding Name}" IsEditable="True"  VerticalAlignment="Center"  Margin="0 0 0 0 " Grid.Column="0" Text="Gird Ver"/>
            <ComboBox x:Name="Gird_Hor" HorizontalAlignment="Center"  ItemsSource="{Binding}" DisplayMemberPath="Name" SelectedValuePath="Name" SelectedValue="{Binding Name}" IsEditable="True"  VerticalAlignment="Center"  Margin="0 0 0 0 " Grid.Column="1" Text="Gird Hor"/>
        </Grid>
        <Button x:Name ="Click_To_Start" Click="Click_To_Start" Margin="100 50 100 100" Content="Start" Height="20"/>
       
    </StackPanel>
</Window> 

